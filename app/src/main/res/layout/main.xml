<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:background="#000000">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:textSize="20dp"
        android:focusable="true"
        android:foreground="#ff8c00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Ajouter"
        android:id="@+id/boutonAjouter"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:textColor="#000000"
        android:textSize="25dp"
        android:background="#ffa812"
        android:clickable="true"
        android:contextClickable="false"
        android:enabled="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Supprimer tout"
        android:id="@+id/boutonAffivher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:textColor="#000000"
        android:textSize="25dp"
        android:background="#ffa812"
        android:clickable="true"
        android:contextClickable="false"
        android:enabled="true"
        android:layout_marginTop="5dp" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/boutonAjouter"
        android:background="#ffffff"
        android:layout_above="@+id/boutonAffivher"
        android:layout_marginTop="5dp"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/textView"
            android:textSize="15dp"
            android:layout_below="@+id/boutonAjouter"
            android:layout_toRightOf="@+id/boutonAffivher"
            android:layout_marginTop="44dp"
            android:layout_alignBottom="@+id/scrollView"
            android:layout_alignRight="@+id/boutonAjouter"
            android:layout_alignEnd="@+id/boutonAjouter"
            android:background="#ffffff"
            android:textColor="#000000" />
    </ScrollView>

</RelativeLayout>
